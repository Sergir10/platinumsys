	<queryString><![CDATA[select pc.fecha_pedido as fecha, 
pc.cod_pedido as nro,
c.nombre_cliente||' '||c.apellido_cliente as Cliente,
pc.total as total
from pedido_cabecera pc
join cliente c on pc.cod_cliente = c.cod_cliente
order by c.nombre_cliente||' '||c.apellido_cliente
where 1=1 $P!{parametros}]]></queryString>

