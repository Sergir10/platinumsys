<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="PlatinumModelPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>py.com.platinum.entity.Producto</class>
    <class>py.com.platinum.entity.Seccion</class>
    <class>py.com.platinum.entity.Presentacion</class>
    <class>py.com.platinum.entity.Marca</class>
    <class>py.com.platinum.entity.Empleado</class>
    <class>py.com.platinum.entity.UnidadMedida</class>
    <class>py.com.platinum.entity.TipoProducto</class>
    <class>py.com.platinum.entity.Cargo</class>
    <properties>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.connection.username" value="platinum"/>
      <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver"/>
      <property name="hibernate.connection.password" value="PLATINUM"/>
      <property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
    </properties>
  </persistence-unit>
</persistence>
